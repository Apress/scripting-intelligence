        <%= link_to_unless_current "Home", :controller => "home", :action => "index" %> |
        <%= link_to_unless_current "Categories", :controller => "categories", :action => "index" %> | 
        <%= link_to_unless_current "Summaries", :controller => "summaries", :action => "index" %> 
      </div>    

      <h3><%=@web_upload_status%></h3>
	
	</body>
